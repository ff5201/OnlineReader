<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/book_list_CardView_TB"
    android:layout_marginBottom="@dimen/book_list_CardView_TB"
    android:layout_marginLeft="@dimen/book_list_CardView_LR"
    android:layout_marginRight="@dimen/book_list_CardView_LR"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">
    <LinearLayout
        style="@style/CardView.Content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_selector"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/book_item_images"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:layout_marginRight="@dimen/book_list_CardView_LR"
            android:scaleType="centerCrop"
            android:src="@drawable/temp_book"
            android:transitionName="@string/transition_book_imgages"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/book_list_CardView_LR"
            android:orientation="vertical">

            <TextView
                android:id="@+id/book_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/book_item_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/book_list_itemMarginTop"
                android:text="作者:"
                android:textColor="@color/secondary_text" />

            <TextView
                android:id="@+id/book_item_subheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/book_list_itemMarginTop"
                android:text="副标题:"
                android:textColor="@color/secondary_text" />

            <TextView
                android:id="@+id/book_item_publication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/book_list_itemMarginTop"
                android:text="出版时间:"
                android:textColor="@color/secondary_text" />

            <TextView
                android:id="@+id/book_item_fontNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/book_list_itemMarginTop"
                android:text="页数:"
                android:textColor="@color/secondary_text" />

            <TextView
                android:id="@+id/book_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/book_list_itemMarginTop"
                android:text="价格:¥"
                android:textColor="@color/secondary_text" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>